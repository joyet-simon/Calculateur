<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="boutton">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:onClick">touche</item>
        <item name="android:background">@drawable/touche</item>
    </style>

    <style name="operation" parent="boutton">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/operation</item>
    </style>
    <style name="radio">
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:longClickable">true</item>
    </style>


</resources>
